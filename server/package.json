{
	"name": "server",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"license": "MIT",
	"scripts": {
		"db:create": "cd ./database && cross-env PGPASSWORD=123456 psql -U postgres -f create-db.sql && cross-env PGPASSWORD=123456 psql -U nestify -d nestify -f create-exts.sql",
		"db:sync": "cross-env DB_SYNC=true ts-node -r tsconfig-paths/register src/main.ts",
		"db:init": "cross-env DB_SYNC=true DB_INIT=true ts-node -r tsconfig-paths/register src/main.ts",
		"build": "run-s build:**",
		"build:server": "rimraf dist && tsc -p tsconfig.build.json",
		"build:next": "next build",
		"dev": "nodemon",
		"prod": "cross-env NODE_ENV=production pm2 start dist/main.js --name 'nestify:8007'",
		"stop": "pm2 delete nestify:8007"
	},
	"dependencies": {
		"@nestjs/common": "^6.0.0",
		"@nestjs/core": "^6.0.0",
		"@nestjs/jwt": "^6.0.0",
		"@nestjs/passport": "^6.0.0",
		"@nestjs/platform-fastify": "^6.1.1",
		"@nestjs/swagger": "^3.0.2",
		"@nestjs/typeorm": "^6.1.0",
		"antd": "^3.17.0",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.2.2",
		"class-validator": "^0.9.1",
		"fastify-file-upload": "^1.0.0",
		"fastify-helmet": "^3.0.0",
		"fastify-nextjs": "^4.1.0",
		"fastify-swagger": "^2.3.2",
		"lodash": "^4.17.11",
		"moment": "^2.24.0",
		"next": "^8.1.0",
		"npm-run-all": "^4.1.5",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"pg": "^7.10.0",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"reflect-metadata": "^0.1.12",
		"rimraf": "^2.6.2",
		"rxjs": "^6.3.3",
		"serve-static": "^1.14.0",
		"ts-loader": "^6.0.0",
		"typeorm": "^0.2.17",
		"uuid": "^3.3.2",
		"youch": "^2.0.10"
	},
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "^7.4.4",
		"@babel/plugin-proposal-decorators": "^7.4.4",
		"@nestjs/testing": "^6.0.0",
		"@types/express": "^4.16.0",
		"@types/jest": "^23.3.13",
		"@types/node": "^12.0.0",
		"@types/supertest": "^2.0.7",
		"@zeit/next-css": "^1.0.1",
		"@zeit/next-sass": "^1.0.1",
		"cross-env": "^5.2.0",
		"jest": "^23.6.0",
		"node-sass": "^4.12.0",
		"nodemon": "^1.18.9",
		"prettier": "^1.17.0",
		"supertest": "^3.4.1",
		"ts-jest": "^23.10.5",
		"ts-node": "^7.0.1",
		"tsconfig-paths": "^3.7.0",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.2",
		"webpack-node-externals": "^1.7.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
